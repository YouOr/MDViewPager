<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <!--操作栏的颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--通知栏背景色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--控件获取焦点的颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--控件的默认颜色,toolbar menu菜单颜色-->
        <item name="colorControlNormal">@color/colorControlnormal</item>
        <!--窗口的颜色-->
        <item name="android:windowBackground">@color/windowbackgroud</item>
        <!--字体的颜色-->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!--溢出菜单的属性-->
        <item name="actionOverflowMenuStyle">@style/AppTheme.OverFlowMenuStyle</item>
        <!--溢出菜单按钮的样式-->
        <item name="actionOverflowButtonStyle">@style/AppTheme.OverFlowButtonStyle</item>
    </style>
    <!--自定义溢出菜单样式-->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="AppTheme.OverFlowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <!--不覆盖工具栏-->
        <item name="overlapAnchor">false</item>
        <!--设置背景色-->
        <item name="android:popupBackground">?attr/colorPrimary</item>
        <item name="android:padding">2dp</item>
        <item name="android:dropDownWidth">wrap_content</item>
    </style>
    <!--自定义溢出按钮样式-->
    <style name="AppTheme.OverFlowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/add</item>
    </style>
    <style name="FruitActivityTheme" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>